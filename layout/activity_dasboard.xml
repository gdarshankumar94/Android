<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Dasboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F43E07"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:gravity="center"
                android:text=" ClassWork"
                android:textColor="#FBFBFB"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="40dp"
                android:gravity="center"
                android:text="Welcome to awsome place of Learning"
                android:textColor="#FBFBFB"
                android:textSize="15sp" />


        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <Button
                    android:id="@+id/button4"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="#1A237E"
                    android:padding="5dp"
                    android:text="ClassNotes"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />


                <Button
                    android:id="@+id/button6"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:background="#1A237E"
                    android:text="Presentations"
                    android:textAllCaps="false"
                    android:textColor="#FCFCFC"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:background="#1A237E"
                    android:text=" ClassVideos"
                    android:textAllCaps="false"
                    android:textColor="#FCFCFC"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:background="#1A237E"
                    android:text="ExtraCirriculum"
                    android:textAllCaps="false"
                    android:textColor="#FCFCFC"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:background="#1A237E"
                    android:text="Live"
                    android:textAllCaps="false"
                    android:textColor="#FCFCFC"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#FF6F00"
                    android:text="Mock Tests"
                    android:textAllCaps="false"
                    android:textColor="#FCFCFC"
                    android:textSize="18sp" />


            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>